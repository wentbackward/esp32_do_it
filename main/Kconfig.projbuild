menu "App: LVGL Display Template"

choice APP_UI_MODE
    prompt "UI mode"
    default APP_UI_SIMPLE
    help
        Select which UI to start at boot.
config APP_UI_SIMPLE
    bool "Simple UI (bars + button)"
config APP_UI_HWTEST
    bool "Hardware test UI"
config APP_UI_DEMO
    bool "LVGL demo widgets (if enabled in LVGL)"
endchoice

menu "Display (SPI ILI9341)"
config APP_LCD_HRES
    int "Horizontal resolution"
    default 240
config APP_LCD_VRES
    int "Vertical resolution"
    default 320

config APP_LCD_SPI_HOST
    int "SPI host id (2 = SPI2_HOST, 3 = SPI3_HOST)"
    range 2 3
    default 2

config APP_LCD_PIN_DC
    int "LCD D/C (RS) GPIO"
    default 46
config APP_LCD_PIN_CS
    int "LCD CS GPIO"
    default 10
config APP_LCD_PIN_SCK
    int "LCD SCK GPIO"
    default 12
config APP_LCD_PIN_MOSI
    int "LCD MOSI GPIO"
    default 11
config APP_LCD_PIN_MISO
    int "LCD MISO GPIO"
    default 13
config APP_LCD_PIN_RST
    int "LCD RST GPIO (-1 if tied to ESP reset)"
    default -1
config APP_LCD_PIN_BL
    int "LCD backlight GPIO (-1 to disable)"
    default 45

config APP_LCD_SPI_CLOCK_HZ
    int "LCD SPI clock (Hz)"
    default 26000000

config APP_LCD_BGR
    bool "Use BGR element order"
    default y

config APP_LCD_SWAP_BYTES
    bool "Swap bytes in LVGL flush (RGB565 endianness)"
    default y
    
config APP_LCD_INVERT_COLORS
    bool "Invert colors"
    default y

menu "LVGL display rotation flags (port-level)"
config APP_ROT_SWAP_XY
    int "swap_xy"
    range 0 1
    default 0
config APP_ROT_MIRROR_X
    int "mirror_x"
    range 0 1
    default 1
config APP_ROT_MIRROR_Y
    int "mirror_y"
    range 0 1
    default 0
endmenu

endmenu  # Display

menu "Touch (FT6x36/FT6336 over I2C)"
config APP_TOUCH_ENABLE
    bool "Enable touch"
    default y

config APP_TOUCH_I2C_PORT
    int "I2C port (0/1)"
    range 0 1
    default 0
config APP_TOUCH_PIN_SCL
    int "Touch I2C SCL GPIO"
    default 15
config APP_TOUCH_PIN_SDA
    int "Touch I2C SDA GPIO"
    default 16
config APP_TOUCH_PIN_RST
    int "Touch RST GPIO (-1 to disable reset)"
    default 18
config APP_TOUCH_I2C_CLOCK_HZ
    int "Touch I2C clock (Hz)"
    default 400000

config APP_TOUCH_I2C_ADDR
    hex "Touch I2C address"
    default 0x38

config APP_TOUCH_RESET_PULSE_MS
    int "Manual reset low pulse (ms)"
    default 20
config APP_TOUCH_RESET_BOOT_MS
    int "Boot delay after reset (ms)"
    default 250
endmenu

endmenu
